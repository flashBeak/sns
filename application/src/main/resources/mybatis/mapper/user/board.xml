<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="BoardDAO">

	<select id="selectList" parameterType="java.util.Map" resultType="com.model.post.BoardVO">
 		SELECT *
		FROM board
		WHERE group_id = #{groupId}
		ORDER BY id DESC
	</select>

	<select id="selectListTotalCount" parameterType="java.util.Map" resultType="int">
 		SELECT
			COUNT(*) AS count
		FROM board
		WHERE group_id = #{groupId}
	</select>

	<select id="select" parameterType="int" resultType="com.model.post.BoardVO">
		SELECT *
		FROM board
		WHERE id = #{id}
	</select>

	<insert id="insert" parameterType="com.model.post.BoardVO">
		INSERT INTO board (
			group_id, type
		<if test="categoryId != null and categoryId != ''">
			, category_id
		</if>
		) VALUES (
			#{groupId}, #{type}
		<if test="categoryId != null and categoryId != ''">
			, #{categoryId}
		</if>
		)
			
		<selectKey keyProperty="id" resultType="int">
        	SELECT LAST_INSERT_ID()
  		</selectKey>
	</insert>
	
	<update id="update" parameterType="com.model.post.BoardVO">
		UPDATE board SET
			id = #{id}
		<if test="type != null and type != ''">
			, type = #{type}
		</if>
		<if test="categoryId != null and categoryId != ''">
			, category_id = #{categoryId}
		</if>
		WHERE id = #{id}
	</update>

	<update id="delete" parameterType="int">
		DELETE FROM board
		WHERE id = #{id}
	</update>
</mapper>